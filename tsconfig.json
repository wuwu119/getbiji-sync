{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "isolatedModules": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES5", "ES6", "ES7", "ES2018", "ES2018.AsyncIterable"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test/**/*.ts"]
}
